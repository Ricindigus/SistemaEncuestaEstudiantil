<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fisi.unmsm.sistemaencuestaestudiantil.activities.AdministradorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material">
        <TextView
            android:id="@+id/txtBarraTitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/admin_primary"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/icons"
            android:textSize="@dimen/texto_medium"
            android:textStyle="bold"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    </LinearLayout>
    <include layout="@layout/layout_administrador"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/layout_margin10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_configuracion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/layout_margin5dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/configuracion_primary_dark">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="@dimen/layout_margin10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/configuracion" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/layout_margin5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="MÓDULO CONFIGURACÍON"
                        android:textColor="@color/configuracion_primary_dark"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_reportes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/layout_margin5dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/reportes_primary_dark">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="@dimen/layout_margin10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/reportes" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/layout_margin5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="MÓDULO REPORTES"
                        android:textColor="@color/reportes_primary_dark"
                        android:textSize="@dimen/texto_small"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin10dp">

            <Button
                android:id="@+id/btnCerrarSesionAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CERRAR SESION"
                android:theme="@style/RaisedButtonDarkAdmin" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
