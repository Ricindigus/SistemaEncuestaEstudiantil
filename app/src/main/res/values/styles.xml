<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CajaBlanca" parent="AlertDialog.AppCompat.Light">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@color/icons</item>
        <item name="colorControlActivated">@color/icons</item>
    </style>

    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SecondTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/admin_primary</item>
        <item name="colorPrimaryDark">@color/admin_primary_dark</item>
        <item name="colorAccent">@color/admin_accent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="RaisedButtonDarkAdmin" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/admin_primary_dark</item>
        <item name="colorControlHighlight">@color/admin_primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RaisedButtonDarkReportes" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/reportes_primary_dark</item>
        <item name="colorControlHighlight">@color/reportes_primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ConfiguracionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/configuracion_primary</item>
        <item name="colorPrimaryDark">@color/configuracion_primary_dark</item>
        <item name="colorAccent">@color/configuracion_accent</item>
    </style>

    <style name="ReportesTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/reportes_primary</item>
        <item name="colorPrimaryDark">@color/reportes_primary_dark</item>
        <item name="colorAccent">@color/reportes_accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
